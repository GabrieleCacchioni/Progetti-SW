<parameters>
	<frame>
		<width> 500 </width>
		<height> 800 </height>
	</frame>
	
	<defaultf>
		<width> 300 </width>
		<height> 300 </height>
	</defaultf>
	
	<buttons>	
		<button id="watch_start">
			<tooltip expr="start" />
			<color expr="RED" />
		</button>
		
		<button id="watch_split">
			<tooltip expr="split" />
		</button>
				
		<button id="watch_unsplit">
			<tooltip expr="" />
			<color expr="WHITE" />
		</button>
		
		<button id="watch_reset">
			<tooltip expr="reset" />
			<color expr="" />
		</button>
	
	</buttons>
	
	<defaultb>
		<dtooltip expr="This is an event" />
		<dcolor expr="WHITE" />
	</defaultb>
	
	
	<panels>
		<panel id="running$value">
			<pcolor expr="RED" />
		</panel>
		
		<panel id="paused$value">
			<pcolor expr="" />
			<ptooltip expr="paused value" />
		</panel>
		
		<panel id="stopped$value">
			<pcolor expr="YELLOW" />
			<ptooltip expr="stopped value" />
		</panel>
	
	</panels>
	
	<defaultp>
		<dcolor expr="LIGHT_GRAY"/>
		<dtooltip expr="This is a variable" />
	</defaultp>
	

</parameters>